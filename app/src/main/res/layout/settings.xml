<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:rowCount="2" android:columnCount="2">
    <TextView
            android:text="@string/night_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/night_theme_text" android:layout_margin="20dp" android:layout_row="0"
            android:layout_column="0"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/night_theme"
            android:gravity="center_vertical|center_horizontal" android:layout_gravity="right"
            android:layout_margin="20dp" android:layout_row="0" android:layout_column="1"
            android:checked="false"/>
</GridLayout>

