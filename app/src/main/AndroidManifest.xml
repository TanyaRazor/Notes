<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tanya.org.ingvin.notes.app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNote"
                  android:screenOrientation="portrait"
                  android:label="@string/add_note">
        </activity>
        <activity android:name=".ExecNotes"
                  android:screenOrientation="portrait"
                  android:label="@string/exec_notes">
        </activity>
        <activity android:name=".ShowNote"
                  android:screenOrientation="portrait"
                  android:label="@string/desc_note">
        </activity>
        <activity android:name=".EditNote"
                  android:screenOrientation="portrait"
                  android:label="@string/edit_note">
        </activity>
        <activity android:name=".About"
                  android:screenOrientation="portrait"
                  android:label="@string/action_about">
        </activity>
        <activity android:name=".Settings"
                  android:screenOrientation="portrait"
                  android:label="@string/action_settings">
        </activity>
    </application>

</manifest>
